<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chatlogbg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/to_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:maxWidth="240dp"
        android:src="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        android:background="@drawable/rounded_white_bg"
        android:backgroundTint="@color/colorLightTeal"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="TextView"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/to_profile"
        app:layout_constraintEnd_toStartOf="@+id/to_profile"
        app:layout_constraintTop_toTopOf="@+id/to_profile" />
    <TextView
        android:id="@+id/textView_to_row_deleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_white_bg"
        android:backgroundTint="@color/colorLightTeal"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="@string/you_deleted_this_message"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/to_profile"
        app:layout_constraintEnd_toStartOf="@+id/to_profile"
        app:layout_constraintTop_toTopOf="@+id/to_profile"/>

    <ImageView
        android:id="@+id/image_to_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_white_bg"
        android:backgroundTint="@color/colorLightTeal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_to"
        app:layout_constraintEnd_toEndOf="@+id/textView_to_row"
        app:layout_constraintStart_toStartOf="@+id/image_to"
        app:layout_constraintTop_toTopOf="@id/image_to" />

    <ImageView
        android:id="@+id/image_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:maxHeight="300dp"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/to_profile"
        app:layout_constraintEnd_toEndOf="@+id/textView_to_row"
        app:layout_constraintTop_toTopOf="@+id/to_profile"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>