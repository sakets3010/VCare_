<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor">

    <TextView
        android:id="@+id/textView_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_bg"
        android:backgroundTint="@color/secondaryColor"
        android:maxWidth="240dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:textColor="@color/secondaryTextColor"
        android:visibility="visible"
        tools:targetApi="lollipop" />
    <ImageView
        android:id="@+id/image_to_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_white_bg"
        android:backgroundTint="@color/secondaryColor"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_to"
        app:layout_constraintEnd_toEndOf="@+id/textView_to_row"
        app:layout_constraintStart_toStartOf="@+id/image_to"
        app:layout_constraintTop_toTopOf="@id/image_to"
        tools:targetApi="lollipop" />

    <ImageView
        android:id="@+id/image_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:maxHeight="300dp"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/textView_to_row"
        app:layout_constraintTop_toTopOf="@id/textView_to_row"
        app:layout_constraintBottom_toBottomOf="@id/textView_to_row"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/timestamp_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryTextColor"
        android:textColorHint="@color/secondaryTextColor"
        app:layout_constraintEnd_toEndOf="@id/textView_to_row"
        app:layout_constraintTop_toBottomOf="@id/textView_to_row" />


</androidx.constraintlayout.widget.ConstraintLayout>